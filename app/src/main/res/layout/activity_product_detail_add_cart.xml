<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/add_cart_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_measure_40dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_measure_100dp"
                android:layout_below="@id/add_cart_view"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/add_cart_image"
                android:layout_width="@dimen/common_measure_100dp"
                android:layout_height="@dimen/common_measure_100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_measure_10dp"
                android:src="@mipmap/zhifubao_icon" />

            <com.davis.kangpinhui.views.CustomTypefaceTextView
                android:id="@+id/add_cart_text_vip_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_cart_view"
                android:layout_marginLeft="@dimen/common_measure_10dp"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:layout_toRightOf="@id/add_cart_image"
                android:text="家分类考试的见风使舵了房间"
                android:textSize="@dimen/text_size_17" />

            <com.davis.kangpinhui.views.CustomTypefaceTextView
                android:id="@+id/add_cart_text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_cart_text_vip_price"
                android:layout_marginLeft="@dimen/common_measure_10dp"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:layout_toRightOf="@id/add_cart_image"
                android:text="发生接受的快乐飞机上看了大的"
                android:textSize="@dimen/text_size_17" />

            <ImageView
                android:id="@+id/add_cart_image_close"
                android:layout_width="@dimen/common_measure_50dp"
                android:layout_height="@dimen/common_measure_50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/add_cart_view"
                android:layout_margin="@dimen/common_measure_10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_nearby" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorlightgray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <com.davis.kangpinhui.views.CustomTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_measure_10dp"
                android:text="规格"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_11" />

            <com.davis.kangpinhui.views.CustomTypefaceTextView
                android:id="@+id/add_cart_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_measure_10dp"
                android:background="@color/lightblue"
                android:text="2个（约12-14）"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorlightgray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_measure_10dp">

                <com.davis.kangpinhui.views.CustomTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买数量"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_size_11" />
                <TextView
                    android:id="@+id/add_cart_add"
                    android:layout_width="@dimen/common_measure_50dp"
                    android:layout_height="@dimen/common_measure_50dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_17"
                    android:background="@drawable/bg_flow_tag_unselect"
                    android:text="+"/>
                <TextView
                    android:id="@+id/add_cart_add_center"
                    android:layout_toLeftOf="@id/add_cart_add"
                    android:layout_width="@dimen/common_measure_50dp"
                    android:layout_height="@dimen/common_measure_50dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17"
                    android:text="12"/>
                <TextView
                    android:id="@+id/add_cart_add_mins"
                    android:layout_toLeftOf="@id/add_cart_add_center"
                    android:layout_width="@dimen/common_measure_50dp"
                    android:layout_height="@dimen/common_measure_50dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_17"
                    android:background="@drawable/bg_flow_tag_unselect"
                    android:text="-"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorlightgray" />

            <com.davis.kangpinhui.views.CustomTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_measure_10dp"
                android:text="康品汇服务（免费加工）"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_11" />

            <com.davis.kangpinhui.views.CustomTypefaceTextView
                android:id="@+id/add_cart_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_measure_10dp"
                android:text="加工"
                android:textColor="@color/black"
                android:background="@drawable/bg_flow_tag_unselect"
                android:textSize="@dimen/text_size_17"
                android:padding="@dimen/common_measure_5dp"/>

        </LinearLayout>

        <com.davis.kangpinhui.views.CustomTypefaceTextView
            android:id="@+id/add_cart_add_btn"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="@dimen/common_measure_50dp"
            android:background="@color/lightblue"
            android:textColor="@color/white"
            android:text="确定"
            android:textSize="@dimen/text_size_17"/>

    </LinearLayout>

</RelativeLayout>