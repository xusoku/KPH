<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/zhifubao_icon" />


    <com.davis.kangpinhui.views.CustomTypefaceTextView
        android:id="@+id/search_result_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="@string/classic_search"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_measure_10dp"
        android:layout_marginBottom="@dimen/common_measure_10dp"
        android:orientation="horizontal">

        <com.davis.kangpinhui.views.CustomTypefaceTextView
            android:id="@+id/search_result_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:hint="@string/classic_search"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17" />

        <LinearLayout
            android:id="@+id/search_cart_iv"
            android:layout_width="@dimen/common_measure_60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:onClick="doClick"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_favorites" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
