<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/classic_rootid_right_nogrid_image"
                android:layout_width="@dimen/common_measure_120dp"
                android:layout_height="@dimen/common_measure_120dp"
                android:scaleType="fitXY" />

            <com.davis.kangpinhui.views.CustomTypefaceTextView
                android:id="@+id/classic_rootid_right_nogrid_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="jia"
                android:padding="2dp"
                android:textColor="@color/colorgray"
                android:textSize="@dimen/text_size_17" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>