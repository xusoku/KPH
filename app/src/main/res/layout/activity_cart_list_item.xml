<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/add_cart_item_checkbox"
            android:layout_width="@dimen/common_measure_40dp"
            android:layout_height="@dimen/common_measure_40dp"
            android:gravity="center"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:layout_marginLeft="@dimen/common_measure_10dp"
            android:padding="@dimen/common_measure_5dp" />

        <ImageView
            android:id="@+id/add_cart_item_iv"
            android:layout_width="@dimen/common_measure_100dp"
            android:layout_height="@dimen/common_measure_100dp"
            android:src="@mipmap/ic_nearby" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/common_measure_10dp"
            android:orientation="vertical">

            <com.davis.kangpinhui.views.CustomTypefaceTextView
                android:id="@+id/add_cart_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_measure_10dp"
                android:text="asdfsdafasf"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_22" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.davis.kangpinhui.views.CustomTypefaceTextView
                android:id="@+id/add_cart_item_sstandent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_measure_20dp"
                android:text="asdfsdafasf"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17" />
        </LinearLayout>


        <ImageView
            android:id="@+id/add_cart_add_del"
            android:layout_width="@dimen/common_measure_60dp"
            android:layout_height="@dimen/common_measure_60dp"
            android:src="@mipmap/ic_nearby" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorlightgray"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_measure_10dp"
        android:layout_marginLeft="@dimen/common_measure_10dp">

        <com.davis.kangpinhui.views.CustomTypefaceTextView
            android:id="@+id/add_cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买数量"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_17" />
        <TextView
            android:id="@+id/add_cart_item_add"
            android:layout_width="@dimen/common_measure_40dp"
            android:layout_height="@dimen/common_measure_40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/common_measure_20dp"
            android:background="@drawable/bg_flow_tag_unselect"
            android:text="+"/>
        <TextView
            android:id="@+id/add_cart_item_add_center"
            android:layout_toLeftOf="@id/add_cart_item_add"
            android:layout_width="@dimen/common_measure_50dp"
            android:layout_height="@dimen/common_measure_50dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17"
            android:text="12"/>
        <TextView
            android:id="@+id/add_cart_item_add_mins"
            android:layout_toLeftOf="@id/add_cart_item_add_center"
            android:layout_width="@dimen/common_measure_40dp"
            android:layout_height="@dimen/common_measure_40dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/common_measure_20dp"
            android:background="@drawable/bg_flow_tag_unselect"
            android:text="-"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorlightgray"/>
</LinearLayout>