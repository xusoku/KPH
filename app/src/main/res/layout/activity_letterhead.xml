<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.davis.kangpinhui.views.CustomTypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发票抬头"
        android:layout_marginTop="@dimen/common_measure_20dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:layout_marginBottom="@dimen/common_measure_10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textSize="@dimen/text_size_17"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <com.davis.kangpinhui.views.CustomTypefaceEditText
        android:id="@+id/lerrerhead_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:layout_marginRight="@dimen/common_measure_10dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_measure_10dp"
        android:background="@drawable/bg_flow_tag_unselect"
        android:hint="个人或单位名称"/>

    <com.davis.kangpinhui.views.CustomTypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发票寄邮地址"
        android:layout_marginTop="@dimen/common_measure_20dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:layout_marginBottom="@dimen/common_measure_10dp"

        android:textSize="@dimen/text_size_17"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <com.davis.kangpinhui.views.CustomTypefaceEditText
        android:id="@+id/lerrerhead_address_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:layout_marginRight="@dimen/common_measure_10dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17"
        android:background="@drawable/bg_flow_tag_unselect"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_measure_10dp"
        android:text=""/>

    <com.davis.kangpinhui.views.CustomTypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发票收件人"
        android:layout_marginTop="@dimen/common_measure_20dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:layout_marginBottom="@dimen/common_measure_10dp"

        android:textSize="@dimen/text_size_17"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <com.davis.kangpinhui.views.CustomTypefaceEditText
        android:id="@+id/lerrerhead_people_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:layout_marginRight="@dimen/common_measure_10dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17"
        android:background="@drawable/bg_flow_tag_unselect"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_measure_10dp"
        android:text=""/>


    <com.davis.kangpinhui.views.CustomTypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系方式"
        android:layout_marginTop="@dimen/common_measure_20dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:layout_marginBottom="@dimen/common_measure_10dp"

        android:textSize="@dimen/text_size_17"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <com.davis.kangpinhui.views.CustomTypefaceEditText
        android:id="@+id/lerrerhead_content_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_60dp"
        android:layout_marginRight="@dimen/common_measure_10dp"
        android:layout_marginLeft="@dimen/common_measure_10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17"
        android:background="@drawable/bg_flow_tag_unselect"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_measure_10dp"
        android:numeric="integer"
        android:hint=""/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <com.davis.kangpinhui.views.CustomTypefaceTextView
        android:id="@+id/lerrerhead_ok"
        android:layout_width="match_parent"
        android:background="@color/colormain"
        android:text="确定"
        android:textColor="@color/white"
        android:clickable="true"
        android:onClick="doClick"
        android:textSize="@dimen/text_size_17"
        android:gravity="center"
        android:layout_height="@dimen/common_measure_60dp" />
    <com.davis.kangpinhui.views.CustomTypefaceTextView
        android:id="@+id/lerrerhead_cancel"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:text="暂不需开具发票"
        android:textColor="@color/black"
        android:clickable="true"
        android:onClick="doClick"
        android:textSize="@dimen/text_size_17"
        android:gravity="center"
        android:layout_height="@dimen/common_measure_60dp" />

</LinearLayout>
