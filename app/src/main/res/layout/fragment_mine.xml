<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_180dp"
        android:background="@color/colormain">
        <ImageView
            android:id="@+id/fragment_mine_photo"
            android:layout_width="@dimen/common_measure_100dp"
            android:layout_height="@dimen/common_measure_100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_measure_20dp"
            android:src="@mipmap/zhifubao_icon"/>
        <com.davis.kangpinhui.views.CustomTypefaceTextView
            android:id="@+id/fragment_mine_name"
            android:layout_toRightOf="@id/fragment_mine_photo"
            android:layout_marginLeft="@dimen/common_measure_10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17"
            android:text="aaa"/>

        <com.davis.kangpinhui.views.CustomTypefaceTextView
            android:id="@+id/fragment_mine_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17"
            android:text="¥"/>
        <com.davis.kangpinhui.views.CustomTypefaceTextView
            android:id="@+id/fragment_mine_price_info"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_measure_20dp"
            android:layout_centerVertical="true"
            android:layout_below="@id/fragment_mine_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17"
            android:text="去充值"/>
    </RelativeLayout>

    <com.davis.kangpinhui.views.MineCustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_nearby"
        app:text="@string/mine_allorder"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_66dp"
        android:orientation="horizontal">
        <com.davis.kangpinhui.views.MineCustomLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:src="@mipmap/ic_nearby"
            app:show="false"
            app:text="@string/mine_unpay"/>
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/common_measure_60dp"
            android:layout_gravity="center_vertical"
            android:background="@color/colorgray"/>
        <com.davis.kangpinhui.views.MineCustomLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:src="@mipmap/ic_nearby"
            app:show="false"
            app:text="@string/mine_senging"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_10dp"
        android:background="@color/colorgray"/>

    <com.davis.kangpinhui.views.MineCustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_nearby"
        app:text="@string/mine_chrage"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_10dp"
        android:background="@color/colorgray"/>

    <com.davis.kangpinhui.views.MineCustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_nearby"
        app:text="@string/mine_mycoup"/>
    <com.davis.kangpinhui.views.MineCustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_nearby"
        app:text="@string/mine_myaddress"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_10dp"
        android:background="@color/colorgray"/>

    <com.davis.kangpinhui.views.MineCustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_nearby"
        app:text="@string/mine_mytihuo"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_10dp"
        android:background="@color/colorgray"/>
    <com.davis.kangpinhui.views.MineCustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_nearby"
        app:text="@string/mine_kefu"/>
    <com.davis.kangpinhui.views.MineCustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_nearby"
        app:text="@string/mine_feedback"/>
    <com.davis.kangpinhui.views.MineCustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_nearby"
        app:text="@string/mine_set"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_10dp"
        android:background="@color/colorgray"/>
    <com.davis.kangpinhui.views.MineCustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_nearby"
        app:text="@string/mine_order"/>
    <com.davis.kangpinhui.views.MineCustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:src="@mipmap/ic_nearby"
        app:text="@string/mine_histroy"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_measure_10dp"
        android:background="@color/colorgray"/>
</LinearLayout>
</ScrollView>