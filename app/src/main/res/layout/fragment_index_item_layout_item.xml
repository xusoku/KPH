<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/common_measure_156dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/common_measure_10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_index_item_image_item"
        android:layout_width="@dimen/common_measure_156dp"
        android:layout_height="@dimen/common_measure_156dp" />

    <com.davis.kangpinhui.views.CustomTypefaceTextView
        android:id="@+id/fragment_index_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="aaa"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17" />

    <com.davis.kangpinhui.views.CustomTypefaceTextView
        android:id="@+id/fragment_index_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="fff"
        android:textColor="@color/colorgray"
        android:textSize="@dimen/text_size_11" />
</LinearLayout>