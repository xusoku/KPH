<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colormain</item>
        <item name="colorAccent">@color/white</item>
        <!--<item name="colorControlHighlight">@color/colorPrimary</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppLancherTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@mipmap/zhifubao_icon</item>
    </style>


    <style name="CartTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colormain</item>
    </style>



    <style name="popwin_recent_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>
    <style name="popwin_add_cart_anim_style">
        <item name="android:windowEnterAnimation">@anim/addcartshow_anim</item>
        <item name="android:windowExitAnimation">@anim/addcardhidden_anim</item>
    </style>

</resources>
